#!/bin/bash
version=${1:-`git describe --tags HEAD`}

mkdir -p fatpack
rm -rf fatpack/lib
cp -rv lib fatpack
pushd fatpack

echo "Stripping Perl libs"
find lib -type f -name '*.pm' \
    | xargs perlstrip --size --cache

echo Fatpacking into bio.pm
fatpack file <(echo 'use App::RecordStream::Bio; 1;') > bio.pm

popd
